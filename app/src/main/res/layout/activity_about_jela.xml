<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_user.AboutJelaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="?actionBarItemBackground"
                app:tint="@color/white"
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="backBtn"
                android:src="@drawable/ic_baseline_keyboard_backspace_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/backBtn"
                android:gravity="start"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="পৌরসভা সম্পর্কে"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/map" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/aboutDistrictTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:padding="5dp"
                        android:text="ফেনী পৌরসভা ফেনী জেলার কলেজ রোডে অবস্থিত। ফেনী সরকারি কলেজের দক্ষিণ দিকে দ্বিতল পৌরসভা ভবনটি অবস্থিত। এ পৌরসভার উত্তরে ধর্মপুর ইউনিয়ন, উত্তর-পশ্চিমে শর্শদি ইউনিয়ন, পশ্চিমে পাঁচগাছিয়া ইউনিয়ন, দক্ষিণে বালিগাঁও ইউনিয়ন এবং পূর্বে কালিদহ ইউনিয়ন ও কাজিরবাগ ইউনিয়ন অবস্থিত। ১৯৫৮ সালে এই পৌরসভা গঠিত হয়। এটি প্রথম শ্রেণীর পৌরসভা ও ১৮টি ওয়ার্ড নিয়ে গঠিত মাত্র ২৭.২০ বর্গ কিলোমিটার আয়তনের ফেনী পৌরসভা। এ পৌরসভার প্রশাসনিক কার্যক্রম ফেনী সদর থানার আওতাধীন। এটি জাতীয় সংসদের ২৬৬নং নির্বাচনী এলাকা ফেনী-২ এর অংশ।"
                        android:lineSpacingExtra="6dp"
                        android:justificationMode="inter_word"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"/>



                <!--    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/view_btn_bg"
                        android:paddingLeft="20dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="20dp"
                        android:text="বিস্তারিত" />
-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>