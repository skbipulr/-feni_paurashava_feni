<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:id="@+id/nameTV"
            android:textSize="16dp"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number"/>

        <TextView
            android:id="@+id/mobileNoTV"
            android:textSize="16dp"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="017282883"/>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"/>

        <TextView
            android:id="@+id/addressTV"
            android:textSize="16dp"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="017282883"/>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject of appointment"/>

        <TextView
            android:id="@+id/subjectTV"
            android:textSize="16dp"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ok ok "/>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"/>

        <TextView
            android:id="@+id/dateTV"
            android:textSize="16dp"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02-09-2020"/>

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="12dp"
            android:textColor="@color/grey_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <TextView
            android:id="@+id/descriptionTV"
            android:textSize="16dp"
            android:maxLines="4"
            android:textColor="@color/grey_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02-09-2020"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sendMessageIV"
                android:layout_marginStart="20dp"
                android:layout_width="25dp"
                android:background="?actionBarItemBackground"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_baseline_mail_outline_24"
                app:tint="@color/green" />

            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/deleteIV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:tint="@color/swipe_1"
                android:background="?actionBarItemBackground"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_baseline_delete_outline_24"
                />

            <ImageView
                android:layout_marginStart="20dp"
                android:id="@+id/referringIV"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?actionBarItemBackground"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_refer_icon"
                />





        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>