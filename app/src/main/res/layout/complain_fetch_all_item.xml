<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageViewIV"
            android:layout_width="match_parent"
            android:layout_marginBottom="6dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder"
            android:layout_height="100dp"/>


        <LinearLayout
            android:layout_margin="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/grey_40"
                android:text="অভিযোগকারীর নাম"/>

            <TextView
                android:id="@+id/nameOneTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey_60"
                android:text="--------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/grey_40"
                android:text=" অভিযোগকারীর ঠিকানা"/>

            <TextView
                android:id="@+id/addressOneTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey_60"
                android:text="--------"/>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/grey_40"
                    android:text="মোবাইল নম্বর: "/>

                <TextView
                    android:id="@+id/mobileNumberTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/grey_60"
                    android:text="----"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/grey_40"
                android:text="অভিযোগ বিবরণ"/>

            <TextView
                android:id="@+id/complainDetailsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey_60"
                android:text="--------"/>

            <View
                android:layout_marginTop="8dp"
                android:background="@color/grey_10"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/grey_40"
                android:text="বাদীর নাম"/>

            <TextView
                android:id="@+id/nameTwoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey_60"
                android:text="--------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/grey_40"
                android:text="বাদীর ঠিকানা"/>

            <TextView
                android:id="@+id/addressTwoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/grey_60"
                android:text="--------"/>








        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gradEnd4"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/sendMessageIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/deleteIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_baseline_delete_outline_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/referringIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_refer_icon"
                app:tint="@color/white" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>