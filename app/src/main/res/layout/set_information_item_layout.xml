<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewIV"
            android:layout_width="match_parent"
            android:layout_marginBottom="6dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/placeholder"
            android:layout_height="100dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_name_icon"
                    app:tint="@color/grey_90" />

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Korim khan"
                    android:textColor="@color/grey_90"
                    android:textSize="18dp" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_mobile_icon"
                    app:tint="@color/grey_90" />

                <TextView
                    android:id="@+id/mobileTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Korim khan"
                    android:textColor="@color/grey_90"
                    android:textSize="16dp" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                app:srcCompat="@drawable/ic_address_icon"
                app:tint="@color/grey_90" />

            <TextView
                android:id="@+id/addresTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Korim khan"
                android:textColor="@color/grey_90"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Korim khan"
            android:textColor="@color/grey_90"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:text="Korim khan"
            android:textColor="@color/grey_60"
            android:textSize="14dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gradEnd4"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/sendMessageIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_baseline_mail_outline_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/deleteIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_baseline_delete_outline_24"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/referringIV"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?actionBarItemBackground"
                app:srcCompat="@drawable/ic_refer_icon"
                app:tint="@color/white" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>